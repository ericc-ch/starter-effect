{
  "name": "verion",
  "version": "0.0.0",
  "description": "A starter kit for a Vite + oRPC",
  "type": "module",
  "scripts": {
    "auth:generate": "tsx ./scripts/auth-generate.ts",
    "db:generate": "tsx ./scripts/db-generate.ts",
    "dev": "alchemy dev",
    "format": "prettier --write .",
    "lint": "oxlint --type-aware",
    "prepare": "simple-git-hooks && konteks sync",
    "test": "vitest",
    "typecheck": "tsc --build"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run format",
    "pre-push": "pnpm run typecheck && pnpm run test && pnpm run lint"
  },
  "devDependencies": {
    "@better-auth/cli": "catalog:better-auth",
    "@cloudflare/workers-types": "catalog:cloudflare",
    "@effect/language-service": "^0.72.0",
    "@libsql/client": "catalog:default",
    "@types/node": "catalog:default",
    "@types/yargs": "^17.0.35",
    "@typescript/native-preview": "7.0.0-dev.20260106.1",
    "alchemy": "^0.83.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "catalog:drizzle",
    "drizzle-orm": "catalog:drizzle",
    "konteks": "^0.0.7",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "catalog:default",
    "vitest": "catalog:vitest",
    "wrangler": "catalog:cloudflare",
    "yargs": "^18.0.0",
    "zod": "catalog:default"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "drizzle-orm": "catalog:drizzle"
    }
  }
}
